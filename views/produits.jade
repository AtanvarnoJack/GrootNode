extends layout

block content
  html
    body
      if details
        ul
        each detail in details
          li= detail.ItemLookupResponse.Items[0].Item[0].ASIN[0]

      .container
        .row
          .col-md-12
            h1 Catégorie de Produits : Téléphones
          hr(class="featurette-divider")
        .row
          .col-xs-8.col-xs-offset-2
            .input-group
              .input-group-btn.search-panel
                button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
                  span#search_concept Filter by
                  span.caret
                if amazonIndex
                  ul.dropdown-menu(role='menu')
                    each amzIndex in amazonIndex
                      li
                        a(href='#amzIndex') amzIndex
              input#search_param(type='hidden', name='search_param', value='all')
              input.form-control(type='text', name='x', placeholder='Search term...')
              span.input-group-btn
                button.btn.btn-default(type='button')
                  span.glyphicon.glyphicon-search
        .row
          .col-md-12
            .col-sm-6.col-md-4
              .thumbnail
                h4.text-center
                  span.label.label-info Samsung
                img.img-responsive(src='http://placehold.it/650x450&text=Galaxy S5')
                .caption
                  .row
                    .col-md-6.col-xs-6
                      h3 Galaxy S5
                    .col-md-6.col-xs-6.price
                      h3
                        label $649.99
                  p 32GB, 2GB Ram, 1080HD, 5.1 inches, Android
                  .row
                    .col-md-6
                      a.btn.btn-primary.btn-product
                        span.glyphicon.glyphicon-thumbs-up
                        |  Like
                    .col-md-6
                      a.btn.btn-success.btn-product(href='#')
                        span.glyphicon.glyphicon-shopping-cart
                        |  Buy
                  p
            .col-sm-6.col-md-4
              .thumbnail
                h4.text-center
                  span.label.label-info Apple
                img.img-responsive(src='http://placehold.it/650x450&text=iPhone 6')
                .caption
                  .row
                    .col-md-6.col-xs-6
                      h3 iPhone 6
                    .col-md-6.col-xs-6.price
                      h3
                        label $749.99
                  p 32GB, 64Bit, 1080HD, 4.7 inches, iOS 8
                  .row
                    .col-md-6
                      a.btn.btn-primary.btn-product
                        span.glyphicon.glyphicon-thumbs-up
                        |  Like
                    .col-md-6
                      a.btn.btn-success.btn-product(href='#')
                        span.glyphicon.glyphicon-shopping-cart
                        |  Buy
                  p
            .col-sm-6.col-md-4
              .thumbnail
                h4.text-center
                  span.label.label-info Nokia
                img.img-responsive(src='http://placehold.it/650x450&text=Lumia 1520')
                .caption
                  .row
                    .col-md-6.col-xs-6
                      h3 Lumia 1520
                    .col-md-6.col-xs-6.price
                      h3
                        label $749.00
                  p 32GB, 4GB Ram, 1080HD, 6.3 inches, WP 8
                  .row
                    .col-md-6
                      a.btn.btn-primary.btn-product
                        span.glyphicon.glyphicon-thumbs-up
                        |  Like
                    .col-md-6
                      a.btn.btn-success.btn-product(href='#')
                        span.glyphicon.glyphicon-shopping-cart
                        |  Buy
