extends layout

block content
  #myCarousel.carousel.slide
    // Indicators
    ol.carousel-indicators
      li(data-target='#myCarousel', data-slide-to='0')
      li(data-target='#myCarousel', data-slide-to='1')
      li(data-target='#myCarousel', data-slide-to='2')
    .carousel-inner
      .item.next.left
        img(src='/images/pub_slider.jpg', alt='First slide', style='height: 500px; width: 100%; display: block;')
        .container
          .carousel-caption
            p
              a.btn.btn-large.btn-primary(href='#') Sign up today
      .item
        img(src='/images/pub_slider2.jpg', alt='Second slide', style='height: 500px; width: 100%; display: block;')
        .container
          .carousel-caption
            p
              a.btn.btn-large.btn-primary(href='#') Learn more
      .item.active.left
        img(src='/images/pub_slider3.jpg', alt='Third slide', style='height: 500px; width: 100%; display: block;')
        .container
          .carousel-caption
            p
              a.btn.btn-large.btn-primary(href='#') Browse gallery
    a.left.carousel-control(href='#myCarousel', data-slide='prev')
      span.glyphicon.glyphicon-chevron-left
    a.right.carousel-control(href='#myCarousel', data-slide='next')
      span.glyphicon.glyphicon-chevron-right
    // /.carousel

  .container.marketing
    .row
      .col-lg-4
        img(src="/images/smartphone-collection.jpg", alt="140x140", class="img-circle", style="width: 140px; height: 140px;")
        h2 Smartphone
